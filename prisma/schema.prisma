generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  role      String @default("user")
  createdAt DateTime @default(now())
}

model Article {
  id          Int @id @default(autoincrement())
  title       String
  description String
  date        DateTime @default(now())
  image       String
  contents    Content[]   
}

model Content {
  id    Int @id @default(autoincrement())
  id_article Int
  type      String
  content  String

  article Article @relation(fields:[id_article],references: [id])
}

model Trip {
  id        Int    @id @default(autoincrement())
  title     String 
  date      DateTime @default(now())
  location  String
  meet_point String
  kuota     Int
  price     Int
  image     String

  contents   TripContent[]
  participants Participant[]
}

model TripContent {
  id    Int @id @default(autoincrement())
  id_trip  Int
  type String
  content String

  trip  Trip @relation(fields:[id_trip],references:[id])
}

model Participant {
  id              Int   @id @default(autoincrement())
  name            String
  trip_id         Int
  no_whatsapp     String
  no_darurat      String
  address         String
  meet_point      String
  payment_proof   String
  
  trip Trip @relation(fields:[trip_id],references:[id])
}